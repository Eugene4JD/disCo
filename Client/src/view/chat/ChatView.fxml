<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXListView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
      minWidth="-Infinity" prefHeight="477.0" prefWidth="612.0"
      xmlns="http://javafx.com/javafx/11.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      userData="Thread"
      fx:controller="view.chat.ChatViewController">
    <children>
        <HBox prefHeight="66.0" prefWidth="822.0"
              style="-fx-background-color: #E8E8E8;">
            <children>
                <ImageView fitHeight="49.0" fitWidth="140.0" pickOnBounds="true"
                           preserveRatio="true">
                    <image>
                        <Image url="@../../resources/v2.3_240p_transparent.png"/>
                    </image>
                    <HBox.margin>
                        <Insets left="33.0" top="11.0"/>
                    </HBox.margin>
                </ImageView>
                <JFXButton onAction="#backButtonPressed" prefHeight="30.0"
                           prefWidth="67.0"
                           style="-fx-background-color: #354f6a; -fx-background-radius: 0;"
                           text="Back" textFill="#ededed">
                    <font>
                        <Font name="System Bold" size="13.0"/>
                    </font>
                    <HBox.margin>
                        <Insets left="320.0" top="18.0"/>
                    </HBox.margin>
                </JFXButton>
            </children>
        </HBox>
        <HBox prefHeight="26.0" prefWidth="576.0">
            <children>
                <VBox prefHeight="26.0" prefWidth="186.0"
                      style="-fx-background-color: #E8E8E8; -fx-background-radius: 10 10 0 0;"/>
            </children>
            <VBox.margin>
                <Insets left="40.0" top="10.0"/>
            </VBox.margin>
        </HBox>
        <HBox prefHeight="274.0" prefWidth="600.0">
            <children>
                <JFXListView fx:id="chatList" prefHeight="274.0"
                             prefWidth="520.0"
                             style="-fx-background-color: #E8E8E8;">
                    <HBox.margin>
                        <Insets left="40.0"/>
                    </HBox.margin>
                </JFXListView>
            </children>
            <VBox.margin>
                <Insets/>
            </VBox.margin>
        </HBox>
        <HBox prefHeight="35.0" prefWidth="175.0">
            <children>
                <TextField fx:id="enterField" prefHeight="30.0"
                           prefWidth="435.0" promptText="Enter message"
                           style="-fx-background-radius: 0; -fx-background-color: -fx-text-box-border, -fx-control-inner-background;">
                    <HBox.margin>
                        <Insets left="40.0"/>
                    </HBox.margin>
                </TextField>
                <JFXButton onAction="#sendButtonPressed" prefHeight="16.0"
                           prefWidth="67.0"
                           style="-fx-background-color: #C5D5D6; -fx-background-radius: 0;"
                           text="Send" textFill="#000000c5">
                    <font>
                        <Font name="System Bold" size="13.0"/>
                    </font>
                    <HBox.margin>
                        <Insets left="17.0"/>
                    </HBox.margin>
                </JFXButton>
            </children>
            <VBox.margin>
                <Insets top="10.0"/>
            </VBox.margin>
        </HBox>
    </children>
</VBox>
